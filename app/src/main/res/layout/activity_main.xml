<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#00994C">

    <TextView
        android:id="@+id/graTekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gra Oczko"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/tak"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/graTekst"
        android:layout_centerHorizontal="true"
        android:text="kupier"
        android:textColor="@color/white"
        android:textSize="30dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/losowaKarta"
        android:text="gracz"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:id="@+id/twk"
        android:layout_centerHorizontal="true"/>

    <ImageView
        android:id="@+id/losowaKarta"
        android:layout_width="match_parent"
        android:layout_height="275dp"
        android:layout_below="@id/tak"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/dane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/losowaKarta"
        android:text=""/>

    <ImageSwitcher
        android:id="@+id/mojeKarty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/nastepnaKrata"
        android:layout_below="@+id/twk"/>

    <Button
        android:id="@+id/koniecGry"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="koniec gry" />

    <Button
        android:id="@+id/nastepnaKrata"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_above="@id/koniecGry"
        android:layout_centerHorizontal="true"
        android:text="Dobierz karte"/>

</RelativeLayout>