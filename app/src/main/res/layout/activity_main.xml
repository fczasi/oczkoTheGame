<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#006600">

    <TextView
        android:id="@+id/graTekst"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Oczko The Game"
        android:textSize="30sp"
        android:textColor="@color/white"/>

    <ImageView
        android:id="@+id/losowaKarta"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:layout_below="@id/graTekst"/>

    <TextView
        android:id="@+id/dane"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/losowaKarta"
        android:text=""
        android:textSize="25sp"
        android:textColor="@color/white"/>



    <Button
        android:id="@+id/koniecGry"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="koniec gry"/>

    <Button
        android:id="@+id/nastepnaKrata"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="Dobierz karte"/>

</RelativeLayout>